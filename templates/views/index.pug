extends ../layouts/default

block content
  section#variante.container
    section#myCarousel.carousel.slide.imagenprincipal(data-ride='carousel')

      // Indicators
      ol.carousel-indicators
        li.active(data-target='#myCarousel', data-slide-to='0')
        li(data-target='#myCarousel', data-slide-to='1')
        li(data-target='#myCarousel', data-slide-to='2')

      // Wrapper for slides
      .carousel-inner
        .item.active
          img.img-responsive(src='images/slide1.jpg', alt='Slide 1')
        .item
          img.img-responsive(src='images/slide2.jpg', alt='Slide 2')
        .item
          img.img-responsive(src='images/slide3.png', alt='Slide 3')

      // Left and right controls
      a.left.carousel-control(href='#myCarousel', data-slide='prev')
        span.glyphicon.glyphicon-chevron-left
        span.sr-only Previous
      a.right.carousel-control(href='#myCarousel', data-slide='next')
        span.glyphicon.glyphicon-chevron-right
        span.sr-only Next
